"!GPU"| textureSize colorRamp heightFunction |
textureSize := 40.0@40.0.
colorRamp := WDCLinearRamp with: {
	0.3 -> Color green muchDarker.
	1.0 -> Color green.
}.
heightFunction := [ :s :t |	| st |
	st := s@t.
	st*textureSize fbmGradientNoiseOctaves: 4 lacunarity: 2.0 tiledWith: textureSize.].^ textureGenerator	textureExtent: 256@256;	heightFunction: heightFunction;	colorMapFunction: colorRamp;	evaluate