	RXGB := self fourCC: 'RXGB'.
	
	DDSD_CAPS := 16r1.
	DDSD_HEIGHT := 16r2.
	DDSD_WIDTH := 16r4.
	DDSD_PITCH := 16r8.
	DDSD_PIXELFORMAT := 16r1000.
